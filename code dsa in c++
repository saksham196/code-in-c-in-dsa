#include <iostream >
#include <math.h>
using namespace std;
int main(){
	int n;
	cin>>n;
	int ans=0;
	int i=0;
	while(n!=0){
		int bit=n&1;
		ans=(bit*pow(10,i))+ans;
		n=n>>1;
		i++;
	}
	cout<<ans;
	
}
decimal to binary conversion
/////////////number of 1 bits code of leetcode/////////////
class Solution {
public:
    int hammingWeight(int n) {
        int count=0;
        while(n!=0){
            if(n&1){
                count++;

            }
            n=n>>1;
            
        }
        return count;
    }
};// number of 1 bits code of leetcode
